@using DaoTaoLaiXe.Models;
@model List<CauHoi>
@{
    Dictionary<int, List<int>> cauHoiDapAnDung = ViewBag.cauHoiDapAnDung;
    Dictionary<int, List<DapAn>> dapAnCauHoiLietDictionarys = ViewBag.DapAnCauHoiLietDictionarys;
    ViewBag.Title = "60 CÂU HỎI ĐIỂM LIỆT";
}

@section styles{
    <link href="~/Content/quizz_008.css" rel="stylesheet" type="text/css" />
}

@section meta{
    <meta name="description" content="" />
}

<div class="row">
    <div class="col-md-8 col-md-offset-2 the-article-body">
        <h1 class="text-center well text-primary">60 CÂU HỎI ĐIỂM LIỆT LÝ THUYẾT BẰNG LÁI XE</h1>
        @{ 
            int stt = 1;
        }
        @foreach (var cauhoi in Model)
        {
            <table class="picture question" align="center">
                <tbody>
                    <tr>
                        <td class="pCaption caption">
                            <h3><b>Câu @(stt++):</b> @cauhoi.NoiDung</h3>
                            @if (!string.IsNullOrEmpty(cauhoi.Hinh))
                            {
                                <div class="zad-inimage-wrapper text-center" style="overflow: hidden;">
                                    <img src="/Content/images/@cauhoi.Hinh" alt="Hình câu hỏi @cauhoi.MaCauHoi">
                                </div>
                            }

                            <ul class="listAnswer">
                                @foreach (var dapan in dapAnCauHoiLietDictionarys[cauhoi.MaCauHoi])
                                {
                                    <li class="@(dapan.DapAnDung == true ? "success" : "")"> <span class="contentAnswer">@dapan.NoiDung</span></li>
                                }
                            </ul>

                        </td>
                    </tr>

                </tbody>
            </table>
        }
    </div>

</div>