@model ThongTinChung

@{
    ViewBag.Title = "Sửa Thông Tin Chung";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Bảng Điều Khiển</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                <label class="control-label col-md-2">Giới Thiệu</label>
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.GioiThieu, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.GioiThieu, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Liên Hệ</label>
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.LienHe, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.LienHe, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cập Nhật" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="~/ckfinder/ckfinder.js"></script>
    <script>
        CKEDITOR.replace("GioiThieu");
        CKEDITOR.replace("LienHe");
        CKFinder.setupCKEditor(null, '/ckfinder');
    </script>
}
