@model CauHoi
@{
    ViewBag.Title = "Xem chi tiết câu hỏi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Bảng điều khiển</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">                  
                    <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.MaCauHoi, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.MaCauHoi, new { htmlAttributes = new { @class = "form-control", @readonly="" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NoiDung, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control", @readonly="" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Hinh, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @if (!string.IsNullOrEmpty(Model.Hinh))
                                    {
                                        <img src="~/Content/images/@Model.Hinh" class="img-responsive" />
                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MaChuyenMuc, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.ChuyenMucCauHoi.TenChuyenMuc, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <td class="text-center">Đáp án số</td>
                                                <td>Nội dung</td>
                                                <td class="text-center">Đáp án đúng</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var dapAn in Model.DapAns.OrderBy(x=>x.SoThuTu))
                                            {
                                            <tr>
                                                <td class="text-center col-sm-1"><span>@dapAn.SoThuTu</span></td>
                                                <td>
                                                    @Html.TextBoxFor(m => dapAn.NoiDung, new { @class = "form-control", @readonly = "" })
                                                </td>
                                                <td class="text-center col-sm-1">
                                                    @Html.CheckBoxFor(m => dapAn.DapAnDung)
                                                </td>
                                            </tr>
                                            } 
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-6">
                                    @Html.ActionLink("Sửa", "Edit", new { Id = Model.MaCauHoi }, new { @class = "btn btn-default" })
                                    @Html.ActionLink("Trở về", "Index", new { MaChuyenMuc = Model.MaChuyenMuc }, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

 