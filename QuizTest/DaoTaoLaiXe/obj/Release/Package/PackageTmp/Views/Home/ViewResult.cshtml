@using DaoTaoLaiXe.Models;
@{
    ViewBag.Title = "KẾT QUẢ ĐÀO TẠO LÁI XE";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

@section styles{
    <link href="~/Content/quizz_008.css" rel="stylesheet" type="text/css" />
}

@section Scripts{

}

<div class="row">
    <div class="col-md-8 col-md-offset-2 the-article-body text-center">
        <h1 class="text-center well text-primary">KẾT QUẢ THI</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center col-xs-4">Câu Trả Lời Đúng</th>
                    <th class="text-center col-xs-4">Câu Trả Lời Sai</th>
                    <th class="text-center col-xs-4">Kết Quả</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><h2>@ViewBag.TongCauDung</h2></td>
                    <td><h2>@ViewBag.TongCauSai</h2></td>
                    <td><h2><span class="text-success">@ViewBag.TongCauDung</span>/@ViewBag.TongCauHoi</h2></td>
                </tr>
                @if ((int)ViewBag.TongCauSai > 0)
                {
                <tr>
                    <td class="text-center" colspan="3">
                        <a href="@Url.Action("Index")" class="btn btn-default"><i class="glyphicon glyphicon-backward"></i> Về Trang Chủ</a>
                        <a href="@Url.Action("ViewWrongAnswer")" class="btn btn-danger"><i class="glyphicon glyphicon-search"></i> Xem Lại Câu Sai</a>
                        <a href="@Url.Action("Practice")" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i> Thi Lại</a>
                    </td>
                </tr>
                }
            </tbody>
            
        </table>
    </div>
</div>